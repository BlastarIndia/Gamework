<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.robyer.gamework"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <permission
        android:name="cz.robyer.gamework.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="cz.robyer.gamework.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAVVuIz6IJpZS4LN7jaiOH3gAADtULhRjU" />
        <!-- development key -->

        <activity
            android:name="cz.robyer.gamework.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="cz.robyer.gamework.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.robyer.gamework.MainActivity" />
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.TestingActivity"
            android:label="@string/title_activity_testing"
            android:parentActivityName="cz.robyer.gamework.activity.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.robyer.gamework.activity.Main" />
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.MapActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName="cz.robyer.gamework.activity.TestingActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.robyer.gamework.activity.TestingActivity" />
        </activity>

        <service
            android:name="cz.robyer.gamework.game.GameService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="cz.robyer.gamework.activity.GameMapActivity"
            android:label="@string/title_activity_game_map" >
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.GameMessagesActivity"
            android:label="@string/title_activity_game_messages" >
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.GameObjectivesActivity"
            android:label="@string/title_activity_game_tasks" >
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.GameInventoryActivity"
            android:label="@string/title_activity_game_inventory" >
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.GameSettingsActivity"
            android:label="@string/title_activity_game_settings" >
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.MessageActivity"
            android:label="@string/title_activity_show_message"
            android:parentActivityName="cz.robyer.gamework.activity.GameMessagesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.robyer.gamework.activity.GameMessagesActivity" />
        </activity>
        <activity
            android:name="cz.robyer.gamework.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>